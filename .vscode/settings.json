{
	// ref: https://github.com/vuejs/language-tools/pull/4206#issuecomment-2560715046
	"vue.server.hybridMode": true,

	// ref: https://biomejs.dev/reference/vscode/#usage
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},

	// ref: https://biomejs.dev/internals/language-support/
	"[javascript][typescript][typescriptreact][json][jsonc][html][css]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.formatOnSave": true
	},

	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},

